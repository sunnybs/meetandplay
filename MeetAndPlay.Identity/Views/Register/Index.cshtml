@using MeetAndPlay.Data.Enums
@model IdentityServerHost.Quickstart.UI.Register.RegisterViewModel
<div class="mx-5 px-5">
    <h2>Регистрация нового пользователя</h2>
    <hr>
    <form method="post" asp-controller="Register" asp-action="Register">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="FirstName"></label><br/>
            <input asp-for="FirstName" class="form-control"/>
            <span asp-validation-for="FirstName"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName"></label><br/>
            <input asp-for="LastName" class="form-control"/>
            <span asp-validation-for="LastName"></span>
        </div>
        <div class="form-group">
            <label asp-for="UserName"></label><br/>
            <input asp-for="UserName" class="form-control"/>
            <span asp-validation-for="UserName"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label><br/>
            <input asp-for="Email" class="form-control"/>
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label><br/>
            <input asp-for="Password" class="form-control"/>
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <label asp-for="PasswordConfirm"></label><br/>
            <input asp-for="PasswordConfirm" class="form-control"/>
            <span asp-validation-for="PasswordConfirm"></span>
        </div>
        <div class="form-group">
            <label asp-for="BirthDate"></label><br/>
            <input asp-for="BirthDate" class="form-control"/>
            <span asp-validation-for="BirthDate"></span>
        </div>
        <div class="form-group">
            <label asp-for="Gender"></label><br/>
            <select asp-for="Gender" asp-items="@Html.GetEnumSelectList<Gender>()" class="form-control">
            </select>
            <span asp-validation-for="Gender"></span>
        </div>
    
        <div class="form-group">
            <input class="btn btn-warning border-0" style="background-color: #FFDC85;" type="submit" value="Регистрация"/>
        </div>
    </form>
</div>

